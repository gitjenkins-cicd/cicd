pipeline{
    // agent{
    //     label "any"
    // }
    agent any
    
    stages{
        stage("A"){
            environment {
            GIT_REPO_NAME = "cicd"
            GIT_USER_NAME = "gitjenkins-cicd"
        }
            steps{
                echo "========executing A========"
                sh '''
                ls -lrth 
                sed -i "s/shakeer/ahmed/g" test.txt
                git config user.email "gitjenkins2020@gmail.com"
                git config user.name "gitjenkins-cicd"
                git add test.txt
                git commit -m "Update version"
                git push https://${githubcicd}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME} HEAD:main
                '''
            }
            post{
                always{
                    echo "========always========"
                }
                success{
                    echo "========A executed successfully========"
                }
                failure{
                    echo "========A execution failed========"
                }
            }
        }
    }
    post{
        always{
            echo "========always========"
        }
        success{
            echo "========pipeline executed successfully ========"
        }
        failure{
            echo "========pipeline execution failed========"
        }
    }
}